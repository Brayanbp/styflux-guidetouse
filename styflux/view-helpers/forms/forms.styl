/**
* Forms Section
* @class Forms
* @module base.css
*/
.form-group
	margin-bottom 15px
	label
		display block
		padding-bottom 5px
.form-group-inline
	zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	.form-control
		float left
		margin-left 20px
		&:first-child
			margin-left 0
.required
	color #CC0000
.checkbox
	label
		display block
		padding-bottom 0
	input
		display inline-block
		margin-right 5px
		vertical-align middle
/**
@module tamaños
@submodule Components: Estilos para los tamaños
*/
.small
	width 140px
.medium
	width 300px

/**
@module resources.css
@submodule Components: Estilos para los componentes del formulario
*/
.ioption
	color #333
	display block
	font-size 14px
	line-height 18px
	padding-left 20px
	position relative
	input[type="radio"],input[type="checkbox"]
		left 0
		margin 0
		padding 0
		position absolute
		top 2px
		*left -2px
		*top -2px
	&.p0
		padding-left 0
	&.font-small
		font-size 12px
.iopinline
	.ioption
		float left
		width 162px		
		&.mwidth
			width 270px
	&.fxgen
		padding-top 6px
		.ioption
			width 120px
	& + .iopinline
		margin-top 10px	
	.poption
		float left
		font-size 14px
		line-height 16px
		margin-left 20px
		padding-left 20px
		position relative
		input[type="radio"],input[type="checkbox"]
			left 0
			margin 0
			padding 0
			position absolute
			top 2px
			*left -2px
			*top -2px
		&:first-child
			margin-left 0
			padding-left 0
.tit-poption
	float left
	font-size 14px
	line-height 32px
	width 150px
	&.line
		line-height 16px
.impreso
	.controls
		margin-left 40px
	.ioption
		float left
		width 340px
	span
		color #FF0000
		font-size 12px
/**
@module resources.css
@submodule Positions Forms: Estilos de contenedores del formulario
*/
.control-label
	color #666
	display block
	font-size 14px
	margin-bottom 10px
.control-group
	margin-bottom 20px
	&.last
		margin 0
.controls
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
.controls-inline
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	&.fix
		.controls + .controls
			margin-left 10px
			padding 0
	& + .controls-inline
		margin-top 20px
	.controls
		float left
		& + .controls
			margin-left 20px
			padding 0
.cgroup-inline
	margin-bottom 20px
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	&.last
		margin 0
	.control-group
		float left
		margin 0 20px 0 0
		&:last-child
			margin 0
.help-inline
	color #666
	display inline-block
	*display inline
	font-family Arial,sans-serif
	font-size 12px
	line-height 12px
	padding 10px 0 0 10px
	vertical-align top
	*zoom 1
.inpt-desc
	color #666
	display block
	font-size 12px
	padding-top 12px
.toselect
	position relative
	&:after
		background url(routImg+"icon-portada.png") arrSelect no-repeat
		color #333
		content ''
		font-size 11px
		height 8px
		padding 0 0 2px
		pointer-events none
		position absolute
		right 8px
		top 7px
		width 14px
	&:before
		background #fff
		content ''
		display block
		height 27px
		pointer-events none
		position absolute
		right 5px
		top -3px
		width 20px
	select
		box-shadow none
		color #333
		outline none
		display inline-block
		-webkit-appearance none
		-moz-appearance none
		appearance none
		cursor pointer
/**
@module resources.css
@submodule Formulario horizontal
*/
.frm-horizontal
	.control-label
		float left
		margin 0
		padding-top 8px
		width 110px
	.controls
		margin-left 110px
