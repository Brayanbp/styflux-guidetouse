/**
* General Section
* @class General
* @module base.css
*/
body
	font 12px/15px family1
	height 100%
	margin 0
h1
	background url(routImg+"icon-set.png") Styflux no-repeat #60C8D1
	float left
	font-size 0
	height 100%
	padding 0 20px
	width 120px
h2
	border-bottom 1px solid #ccc
	color #60C8D1
	font 400 34px/35px family2
	margin 20px 0
	padding-bottom 10px
ul
	list-style none
	margin 0
	padding 0
p
	margin 0 0 15px
a
	color #5F8626
	text-decoration none
	&:hover
		text-decoration underline
td, th
	vertical-align middle
	word-wrap break-word
input[type="text"],input[type="password"]
	background #FFF
	border 1px solid #B8B8B8
	border-radius 4px
	box-shadow -1px 2px 2px rgba(0, 0, 0, 0.2) inset
	color #333
	font-family family1
	font-size 14px
	height 22px
	line-height 22px
	padding 4px 8px
select
	border 1px solid #B8B8B8
	border-radius 4px
	box-shadow -1px 2px 2px rgba(0, 0, 0, 0.2) inset
	color #333
	font-size 14px
	font-family family1
	height 32px
	line-height 20px
	padding 2px 4px
option
	background #fff
	border-bottom 1px solid #e8e8e8
	font 12px/15px family1
	padding 2px 5px
textarea
	border 1px solid #B8B8B8
	border-radius 4px
	box-shadow -1px 2px 2px rgba(0, 0, 0, 0.2) inset
	color #333
	font-family family1
	font-size 14px
	line-height 18px
	padding 4px 8px
	resize none